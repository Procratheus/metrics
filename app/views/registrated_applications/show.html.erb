<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= link_to "Edit", edit_registrated_application_path(@app), class: "btn btn-warning btn-sm" %>
      <%= link_to "Delete", registrated_application_path(@app), class: "btn btn-danger btn-sm", method: :delete, data: {confirm: "Are you sure you wish to deregister this app"} %>
    </div>
    <div class="col-md-9">
      <div class="media">
        <div class="media-heading">
          <h2><%= @app.name %></h2>
        </div>
        <div class="media-body">
          <h4><%= link_to "#{@app.url}", @app.url %></h4>          
          <% @event.each do |event, instance| %>
            <h4><%= event %></h4>
            <h4><%= instance. %></h4>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

