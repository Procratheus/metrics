<div class="container">
  <div class="row">
    <div class="col-md-2">
      <div class="media">
        <div class="media-heading">
          <%= link_to "Register App", new_registrated_application_path, class: "btn btn-sm btn-success pull-right register-app" %>    
        </div>
      </div>
    </div>
    <div class="col-md-10">
      <% @apps.each do |app| %>
        <div class="media">
          <div class="media-heading">
            <h3><%= link_to "#{app.name}", registrated_application_path(app) %></h3>        
          </div>
          <div class="media-body">
            <h4><%= link_to "#{app.url}", app.url %></h4>
            <h4><%= app.events.count %></h4>          
          </div>
        </div>
      <% end %>
    </div>
    
  </div>
</div>

  

