<div class="container">
  <div class="form-signin">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <h2 class="form-signin-heading">Edit <%= resource_name.to_s.humanize %></h2>
      <%= devise_error_messages! %>
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, id: "inputPassword", class: "form-control"  %>
      <br>
      <%= f.label :email %>
      <%= f.email_field :email, id: "inputEmail", class: "form-control" %>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>
          Currently waiting confirmation for: <%= resource.unconfirmed_email %>
        </div>
      <% end %>
      <br>
      <%= f.label :password %>
      <%= f.password_field :password, autocomplete: "off", id: "inputPassword", class: "form-control" %>
      <i>(leave blank if you don't want to change it)</i>
      <br>
      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation, autocomplete: "off", id: "inputPassword", class: "form-control" %>
      <br>
      <%= f.label :current_password %>
      <%= f.password_field :current_password, autocomplete: "off", id: "inputPassword", class: "form-control" %>
      <i>(we need your current password to confirm your changes)</i>
      <div class="update-button">
        <%= f.button "Update", class: "btn btn-primary btn-block", data: {disable_with: "<i class='fa fa-spinner'></i> Updating....."} %>  
      </div>
    <% end %>
    <h3 class="form-signin-heading">Cancel my account</h3>
    <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete, class: "btn btn-warning btn-block" %></p>
    <%= link_to "Back", :back %>
  </div>
</div>






