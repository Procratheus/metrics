<%- if controller_name != 'sessions' %>
  <%= link_to new_session_path(resource_name),  class: "btn btn-primary btn-block sign-up", data: {disable_with: "<i class='fa fa-spinner'></i>"} do %>
    <span class="fa fa-envelope-o pull-left"></span>Log in with e-mail
  <% end %>
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: "btn btn-primary btn-block sign-up", data: {disable_with: "<i class='fa fa-spinner'></i>"} %>
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to omniauth_authorize_path(resource_name, provider), class: "btn #{ provider == :twitter ? 'btn-twitter' : 'btn-facebook'} btn-block", data: {disable_with: "<i class='fa fa-spinner'></i>"} do %>
      <% if provider == :twitter %>
        <span class="fa fa-twitter pull-left"></span>Sign in with twitter
      <% else %>
        <span class="fa fa-facebook pull-left"></span>Sign in with facebook
      <% end %>
    <% end %>
  <% end -%>
<% end -%>
<br>
<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name) %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name) %><br />
<% end -%>
