<div class="container">
  <div class="form-signin">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <h2 class="form-signin-heading">Forgot your password?</h2>
      <%= devise_error_messages! %>
      <%= f.email_field :email, autofocus: true, placeholder: "Enter your e-mail", class: "form-control",  id: "inputEmail" %>
      <br>
      <%= f.button "Send me reset password instructions", class: "btn btn-primary btn-block", data: {disable_with: "<i class='fa fa-spinner'></i>"} %>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>








